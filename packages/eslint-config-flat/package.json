{
  "$schema": "http://json.schemastore.org/package.json",
  "name": "@xylabs/eslint-config-flat",
  "version": "6.5.7",
  "description": "ESLint Config used throughout XY Labs TypeScript/JavaScript libraries and react projects",
  "keywords": [
    "xylabs",
    "utility",
    "typescript",
    "eslint"
  ],
  "homepage": "https://github.com/xylabs/eslint-config.git",
  "bugs": {
    "url": "git+https://github.com/xylabs/eslint-config/issues",
    "email": "support@xylabs.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xylabs/config.git"
  },
  "license": "LGPL-3.0-only",
  "author": {
    "name": "XY Labs Development Team",
    "email": "support@xylabs.com",
    "url": "https://xylabs.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "types": "./dist/types/index.d.ts",
    "default": "./dist/node/index.mjs"
  },
  "module": "./dist/node/index.mjs",
  "types": "./dist/types/index.d.ts",
  "files": [
